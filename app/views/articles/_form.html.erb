<%= form_with(model: @article, local: true) do |f| %>
  <%= render 'shared/errors', obj: @article %>
  <form>
    <div class="form-group row">
      <%= f.label :title, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Name of your article", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :description, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Content of your article" %>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text } %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </form>
<% end %>