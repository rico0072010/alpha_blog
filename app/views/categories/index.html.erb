<h1 align="center">Categories</h1>

<div align="center">
  <%= will_paginate @categories %>
</div>

<div align="center">
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title"><%= link_to category.name, category_path(category) %></li>
          <li><small><%= pluralize(category.articles.count, "category") if category.articles.any? %></small></li>
          <div class="article-meta-details">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago,
                last updated: <%= time_ago_in_words(category.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </ul>
  <% end %>
</div>

<div align="center">
  <%= will_paginate @categories %>
</div>