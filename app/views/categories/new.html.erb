<h1 align="center">Create a new category</h1>
<%= form_with(model: @category, local: true) do |form| %>
  <%= render 'shared/errors', obj: @category %>
  <form>
    <div class="form-group row">
      <%= form.label :name, "Category name", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= form.text_field :name, class: "form-control", placeholder: "Enter a name", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-8">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  </form>
<% end %>