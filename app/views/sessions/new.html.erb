<h1 align="center">Log in</h1>

<%= form_with(scope: :session, local: true, url: login_path) do |form| %>
  <form>
    <div class="form-group row">
      <%= form.label :email, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= form.text_field :email, class: "form-control", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :password, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= form.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-8">
        <%= form.submit "Log in", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <%= link_to 'Cancel', articles_path, class: "col-xs-2 col-xs-offset-2" %>
  </form>
<% end %>