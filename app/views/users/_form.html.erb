<%= form_with(model: @user, local: true) do |form| %>
  <%= render 'shared/errors', obj: @user %>
  <form>
    <div class="form-group row">
      <%= form.label :username, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= form.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :email, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :password, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-8">
        <%= form.submit(@user.new_record? ? "Sign up" : "Update your account", class: "btn btn-primary") %>
      </div>
    </div>
  </form>
<% end %>